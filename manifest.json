{
  "manifest_version": 3,
  "name": "Time Lock",
  "version": "2.0",
  "description": "Allow access to websites only during configured time windows",

  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "options_page": "options/options.html"
}
